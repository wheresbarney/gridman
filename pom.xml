<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <packaging>pom</packaging>
  <groupId>org.gridman</groupId>
  <artifactId>gridman</artifactId>
  <version>1.0.0</version>
  <name>GridMan</name>
  <description>GridMan Project</description>
  <url>http://code.google.com/p/gridman/</url>

  <properties>
    <coherence.version>[3.6,3.7)</coherence.version>
    <apacheds.version>1.5.5</apacheds.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <organization>
     <name>GridMan</name>
     <url>http://code.google.com/p/gridman/</url>
  </organization>

  <modules>
    <module>gridman-testtools</module>
    <module>gridman-common</module>
    <module>gridman-coherence</module>
    <!--<module>sandbox</module>-->
  </modules>

  <scm>
    <connection>scm:svn:http://gridman.googlecode.com/svn/trunk</connection>
    <developerConnection>scm:svn:https://gridman.googlecode.com/svn/trunk</developerConnection>
    <url>http://gridman.googlecode.com/svn/</url>
  </scm>

  <distributionManagement>
    <repository>
      <id>builds</id>
      <name>In-house build repository</name>
      <url>${internal.maven.repo}</url>
    </repository>
    <site>
      <id>GridMan</id>
      <name>GridMan</name>
      <url>file://~/Sites/gridman</url>
    </site>
  </distributionManagement>

  <developers>
    <developer>
      <name>Andrew Wilson</name>
    </developer>
    <developer>
      <name>Jonathan Knight</name>
      <email>jk@thegridman.com</email>
    </developer>
  </developers>

  <build>
    <finalName>gridman-${project.version}</finalName>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-scm-plugin</artifactId>
          <version>1.4</version>
          <configuration>
            <goals>install</goals>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>ISO-8859-1</encoding>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-resources-plugin</artifactId>
          <configuration>
            <encoding>ISO-8859-1</encoding>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-source-plugin</artifactId>
          <configuration>
            <outputDirectory>target/classes</outputDirectory>
            <finalName>${project.name}-src.jar</finalName>
            <attach>false</attach>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration>
            <skip>false</skip>
            <argLine>-Xmx1024m -XX:MaxPermSize=256m</argLine>
            <disableXmlReport>false</disableXmlReport>
            <forkMode>always</forkMode>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <locales>en</locales>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>


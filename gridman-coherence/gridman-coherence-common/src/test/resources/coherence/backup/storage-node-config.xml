<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config-3.6.dtd">

<!-- secureConfig - config for secure solution -->
<cache-config>

    <!-- Allow non pof stuff to work for now. -->
    <defaults>
        <serializer>
            <instance>
                <class-name system-property="org.gridman.coherence.serializer">
                    com.tangosol.io.pof.ConfigurablePofContext
                </class-name>
                <init-params>
                    <init-param>
                        <param-type>java.lang.String</param-type>
                        <param-value>coherence/backup/test-pof-config.xml</param-value>
                    </init-param>
                </init-params>
            </instance>
        </serializer>
    </defaults>


    <caching-scheme-mapping>

        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>readwrite</scheme-name>
        </cache-mapping>

    </caching-scheme-mapping>

    <caching-schemes>

        <distributed-scheme>
            <scheme-name>dist-scheme</scheme-name>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <backup-storage>
                <type>scheme</type>
                <scheme-name>backup-scheme</scheme-name>
            </backup-storage>
            <partition-listener>
                <class-name>org.gridman.coherence.backup.LoggingPartitionListener</class-name>
            </partition-listener>
            <partition-count>29</partition-count>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>readwrite</scheme-name>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme/>
                    </internal-cache-scheme>
                    <cachestore-scheme>
                        <class-scheme>
                            <class-name>org.gridman.coherence.backup.CacheStoreStub</class-name>
                        </class-scheme>
                        <operation-bundling>
                            <bundle-config>
                                <operation-name>store</operation-name>
                                <delay-millis>60000</delay-millis>
                                <preferred-size>1000</preferred-size>
                                <thread-threshold>1</thread-threshold>
                            </bundle-config>
                        </operation-bundling>
                    </cachestore-scheme>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
            <thread-count>10</thread-count>
            <autostart>true</autostart>
        </distributed-scheme>

        <class-scheme>
            <scheme-name>backupmap-scheme</scheme-name>
            <class-name>org.gridman.coherence.backup.BackupMap</class-name>
            <init-params>
                <init-param>
                    <param-type>java.lang.String</param-type>
                    <param-name>{cache-name}</param-name>
                </init-param>
            </init-params>
        </class-scheme>

        <external-scheme>
            <scheme-name>backup-scheme</scheme-name>
            <unit-calculator>BINARY</unit-calculator>
            <bdb-store-manager>
                <class-name>org.gridman.coherence.backup.BDBStoreManager</class-name>
                <directory system-property="backup.bdb.directory"/>
                <store-name>{cache-name}</store-name>
            </bdb-store-manager>
        </external-scheme>

        <invocation-scheme>
            <scheme-name>ClientInvokeService</scheme-name>
            <service-name>ClientInvokeService</service-name>
            <autostart>true</autostart>
        </invocation-scheme>

    </caching-schemes>
</cache-config>

<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config-3.6.dtd">

<cache-config>
    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>dist-default</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>

        <distributed-scheme>
            <scheme-name>dist-default</scheme-name>
            <lease-granularity>member</lease-granularity>
            <backing-map-scheme><local-scheme/></backing-map-scheme>
            <partition-count system-property="coherence.partitionCount">257</partition-count>
            <autostart>true</autostart>
        </distributed-scheme>

        <proxy-scheme>
            <service-name>ExtendTcpProxyService</service-name>
            <thread-count>5</thread-count>
            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address>localhost</address>
                        <port system-property="coherence.extend.port"/>
                    </local-address>
                    <reuse-address>true</reuse-address>
                </tcp-acceptor>
            </acceptor-config>
            <autostart system-property="coherence.isProxy">X</autostart>
        </proxy-scheme>

        <invocation-scheme>
            <service-name>InvokeService</service-name>
            <thread-count>5</thread-count>
            <autostart system-property="coherence.isProxy"/>
        </invocation-scheme>

    </caching-schemes>
</cache-config>